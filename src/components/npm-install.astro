---
import { Tabs, TabItem, Code } from "@astrojs/starlight/components";

interface Props {
	packageName: string;
}

const props = Astro.props;
---

<Tabs syncKey="node-pacakge-manager-preference">
	<TabItem label="npm" icon="seti:npm">
		<Code lang="sh" frame="none" code={`npm install ${props.packageName}`} />
	</TabItem>
	<TabItem label="pnpm" icon="pnpm">
		<Code lang="sh" frame="none" code={`pnpm add ${props.packageName}`} />
	</TabItem>
	<TabItem label="yarn" icon="seti:yarn">
		<Code lang="sh" frame="none" code={`yarn add ${props.packageName}`} />
	</TabItem>
</Tabs>
